# Server Configuration
NODE_ENV=production
PORT=3333
API_BASE_URL=http://localhost:3333

# Database Configuration
DATABASE_URL=sqlite:///home/fastl/JustLayMe/database/justlayme.db
DATABASE_TYPE=sqlite
DATABASE_POOL_SIZE=10

# JWT & Security
# CRITICAL: Generate new secrets before deployment!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_SECRET_MIN_64_BYTES
SESSION_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_SECRET_MIN_64_BYTES
COOKIE_SECRET=REPLACE_WITH_CRYPTOGRAPHICALLY_SECURE_SECRET_MIN_64_BYTES

# Stripe Configuration
# IMPORTANT: Never commit live keys to git
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PREMIUM_PRICE_ID=price_YOUR_PREMIUM_PRICE_ID
STRIPE_PRICE_MONTHLY=price_YOUR_MONTHLY_PRICE_ID
STRIPE_PRICE_YEARLY=price_YOUR_YEARLY_PRICE_ID
STRIPE_PRICE_LIFETIME=price_YOUR_LIFETIME_PRICE_ID

# Email Configuration
EMAIL_USER=noreply@justlay.me
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD
EMAIL_FROM=JustLayMe <noreply@justlay.me>
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587

# Google OAuth
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# Ollama Configuration
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=sushruth/solar-uncensored

# XTTS Voice Cloning
XTTS_URL=http://localhost:5558

# Admin Configuration
# CRITICAL: Generate a secure 6-digit PIN
# Use: node -e "console.log(Math.floor(100000 + Math.random() * 900000))"
ADMIN_PIN=REPLACE_WITH_SECURE_6_DIGIT_PIN

# Logging
LOG_LEVEL=debug
